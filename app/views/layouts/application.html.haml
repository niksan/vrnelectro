!!!
%html
%head
  %title WebShop
  = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application'
  = csrf_meta_tags
  = include_gritter
%body
  .container
    .raw
      .navbar
        .navbar-inner
          = link_to 'WebShop', root_path, class: 'brand'
    .raw
      .span3
        = render '/shared/side_menu'
        #cart
          %h4 Ваша корзина: 
          = render partial: 'shared/cart_content', locals: { cart: @cart }
      .span1
      .span8
        = notice
        = alert
        = yield
